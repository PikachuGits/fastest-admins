{
  "extends": "@fastest/tsconfig/tsconfig.monorepo.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "paths": {
      "@fastest/plugins": ["./src"]
    }
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
