{
  "extends": "@fastest/tsconfig/tsconfig.monorepo.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "declaration": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
